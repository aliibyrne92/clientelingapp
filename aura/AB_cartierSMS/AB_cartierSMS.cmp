<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes" controller="AB_SMScontroller">
    <div class="outerSMSContainer">
        
        
        <div class="innerSMSContainer">
            
            <div class="slds-text-heading_medium emailHeader">Send Outbound SMS</div>
            
            <div class="slds-form-element">
                <label class="slds-form-element__label" for="textarea-id-01">Message Template</label>
                <div class="slds-form-element__control">
                    <div id="textarea-id-01" class="slds-form-element__static slds-text-longform">
                        Hello Ji, we are pleased to confirm your next appointment at our Geneva Rh√¥ne Boutique.</div>
                </div>
            </div>
            
            <lightning:button variant="brand" class="smsBttn" label="Send" onclick="{!c.sendSMS}" />
        </div>
        
        <div class="successPopSMS" aura:id="modalBoxSMS">
            <div class="slds-notify_container slds-is-relative">
                <div class="slds-notify slds-notify_toast slds-theme_success" role="status">
                    <span class="slds-assistive-text">success</span>
                    <span class="slds-icon_container slds-icon-utility-success slds-m-right_small slds-no-flex slds-align-top" title="Description of icon when needed">
                        <lightning:icon iconName="utility:success" size="small" alternativeText="Utility success" />
                    </span>
                    <div class="slds-notify__content">
                        <h2 class="slds-text-heading_small">SMS has been sent.</h2>
                    </div>
                    <div class="slds-notify__close">
                        <button class="slds-button slds-button_icon slds-button_icon-inverse" title="Close">
                            <lightning:icon iconName="utility:close" size="small" alternativeText="Utility close" />
                            <span class="slds-assistive-text">Close</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    
</aura:component>